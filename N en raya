        this.terminado = false;
        crearJugadores();
        seleccionarJugador();
        Tablero[]= new Tablero[];
        Tablero.crearTablero();
    }
    
    public void inicializarJuego() {
        this.jugadores = new Jugadores[2];
        this.terminado = false;
        crearJugadores();
        seleccionarJugador();
        Tablero= new Tablero[];
        Tablero.crearTablero();
    }
    
    public void jugar() {
        while(!terminado) {
            Tablero.colocarFicha();
            Tablero.mostrarTablero();
            Tablero.verificarFinalizacion();
            cambiarTurno();
        }
    }
